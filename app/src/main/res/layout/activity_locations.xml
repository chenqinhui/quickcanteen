<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.quickcanteen.quickcanteen.activities.settings.SettingsActivity">
    <include layout="@layout/top_toolbar"
             android:id="@+id/top_toolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_background_light_pink">
        <Button
                android:text="新增收货地址"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/newLocations"
                android:background="@color/color_background_light_pink" android:textSize="18sp"
                android:textColor="@color/blue"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:dividerHeight="15dp"
                android:id="@+id/locations"/>
    </LinearLayout>
</LinearLayout>

