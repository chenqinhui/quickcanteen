<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/style_history_order"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants">

    <ImageView
            android:layout_height="32dp"
            android:layout_width="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/page_margin"
            android:id="@+id/orderImg"
            android:background="@drawable/company_img"
            android:focusable="false"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin">
            <TextView
                    android:text="食堂名称"
                    android:paddingTop="@dimen/text_top_margin"
                    android:paddingBottom="@dimen/text_bottom_margin"
                    android:focusable="false"
                    android:textSize="@dimen/text_size_history_order_company"
                    android:textColor="@color/color_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderCompany"/>
            <TextView
                    android:text="订单状态"
                    android:textSize="@dimen/text_size_history_order_state"
                    android:textColor="@color/color_text_black"
                    android:paddingTop="@dimen/text_top_margin"
                    android:paddingBottom="@dimen/text_bottom_margin"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderState"
                    android:textAlignment="textEnd"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="@dimen/page_margin"
                android:focusable="false"
                android:id="@+id/line"
                android:background="@color/color_history_order_line"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingBottom="@dimen/text_bottom_margin">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="取餐人信息"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/orderUserInfo" android:textSize="16sp" android:textAlignment="textStart"/>
                <TextView
                        android:text="送达地点"
                        android:textSize="@dimen/text_size_primary"
                        android:textColor="@color/color_text_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:id="@+id/orderAddress"
                        android:textStyle="normal|bold"/>
            </LinearLayout>

            <TextView
                    android:text="配送费"
                    android:textSize="@dimen/text_size_primary"
                    android:textColor="@color/color_history_order_price"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliverPrice"
                    android:textStyle="normal|bold" android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/page_margin"
                android:paddingTop="@dimen/text_top_margin"
                android:paddingBottom="@dimen/text_bottom_margin">
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_weight="1"/>
            <Button
                    android:text="我要接单"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/takeOrder"
                    android:background="@drawable/button_border3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
