<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_my_collection_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.quickcanteen.activity.collect.MyCollectionList">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal" android:layout_marginTop="12dp"
                android:layout_width="354dp" android:layout_below="@+id/top_toolbar"
                android:layout_height="35dp" android:id="@+id/companyView"
                android:layout_centerHorizontal="true">
            <ImageView
                    app:srcCompat="@drawable/company_img"
                    android:id="@+id/companyLogo"
                    android:layout_height="35dp"
                    android:layout_width="50dp" android:layout_weight="1"/>
            <TextView
                    android:id="@+id/companyName" android:textColor="@color/color_text_black"
                    android:textSize="22sp" android:layout_height="35dp" android:layout_width="304dp"
                    android:text="company_name" android:layout_weight="1"/>
        </LinearLayout>
        <View android:layout_height="1px"
              android:layout_width="match_parent"
              android:background="@color/color_mainPage_splitLine" android:layout_gravity="center"

              android:layout_weight="0" android:id="@+id/splitLine"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:background="@color/color_background_white"
                    android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:layout_marginTop="0dp">
                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="120dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/dishPic"
                        android:layout_weight="1" android:padding="0dp" android:scaleType="fitXY"
                        android:layout_marginTop="15dp" android:layout_marginBottom="15dp"
                        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
                <Button
                        android:layout_height="match_parent" android:id="@+id/dishesName" android:layout_weight="1"
                        android:background="@color/color_background_white"
                        android:layout_width="90dp" android:textSize="60px"
                        android:ellipsize="end" android:text="中午吃什么"/>
            </LinearLayout>

    </LinearLayout>
</RelativeLayout>
